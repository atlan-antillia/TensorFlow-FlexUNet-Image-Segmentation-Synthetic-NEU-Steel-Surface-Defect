;Synthetic-NEU-Seg Segmentation

[model]
model         = "TensorFlowFlexUNet"
generator     =  False
image_width    = 256
image_height   = 256
image_channels = 3
input_normalize =True
normalization  = False

num_classes    = 4

base_filters   = 16
base_kernels   = (9,9)
num_layers     = 8
dropout_rate   = 0.03
dilation       = (1,1)

; Model compilation parameters
optimizer       = "Adam"

learning_rate  = 0.00006
clipvalue      = 0.5

; Specify "categorical_crossentropy" function to loss
; for categoraized(one-hot-encoded) mask 

loss           = "categorical_crossentropy"
metrics        = ["dice_coef_multiclass"]

show_summary   = False

[dataset]
class_name    = "ImageCategorizedMaskDataset"

[train]
;epochs       = 50
epochs        = 100
batch_size    = 2

;steps_per_epoch  = 200
;validation_steps = 80

; EarlyStopping parameter
patience      = 10

metrics       = ["dice_coef_multiclass", "val_dice_coef_multiclass"]

model_dir     = "./models/"
eval_dir      = "./eval/"
images_dir    = "../../../dataset/Synthetic-NEU-Seg/train/images/"
masks_dir     = "../../../dataset/Synthetic-NEU-Seg/train/masks/"

create_backup  = False

; learning_rate_reducer callback parameter
learning_rate_reducer = True
reducer_factor     = 0.4
reducer_patience   = 4

epoch_change_infer     = True
epoch_change_infer_dir =  "./epoch_change_infer"
num_infer_images       = 6

; Model saving option
save_weights_only  = True

[valid]
images_dir = "../../../dataset/Synthetic-NEU-Seg/valid/images/"
masks_dir  = "../../../dataset/Synthetic-NEU-Seg/valid/masks/"

[test] 
images_dir = "../../../dataset/Synthetic-NEU-Seg/test/images/"
masks_dir  = "../../../dataset/Synthetic-NEU-Seg/test/masks/"

[infer] 
images_dir    = "./mini_test/images/"
output_dir    = "./mini_test_output/"

[image]
color_order = "RGB"

[mask]
mask_file_format = ".png"
;Synthetic-NEU-Seg 1+3
;                  Patches:blue, Inclusion:green,  Scratches:red
rgb_map = {(0,0,0):0, (0,0,255):1, (0,255,0):2, (255,0,0):3,]
    



